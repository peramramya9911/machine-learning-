import math
radius = 30
_area_of_circle_ = math.pi * radius * radius
-circum of circle_ = 2 * math.pi * radius
print ("Radius of a circle: {price: .2f}". format (price=radius))
print ("Area of a circle: {_area_of_circle_:.2f}". format(_area_of_circle_=_area_of_circle_))
print ("Circumference of a circle: {_circum_of_circle_:.2f}".format(_circumof_circle_=_circum_of_circle_))
